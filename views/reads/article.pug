extends ../layout

block content
	div(class='row' style='margin-top:10px;')
		div.card(style='width=50%;')
			div.card-divider
				h1(class='header')= article.title
			div.card-divider
				p= 'Author: ' + article.author
				if article.postDate
					p= 'Posted: ' + article.postDate
				if article.url
					p= 'URL: ' + article.url
			div.card-section
				p.center-floater= article.body
				div.row(style='margin-left:auto;margin-right:auto;')
					a.button.primary.left-floater(style='width:7%;margin:10px;' href="/write/articles/article/edit/" + article.id) Edit
					a.button.alert.right-floater(style='width:7%;margin:10px;' href="/write/articles/article/delete/" + article.id) Delete
